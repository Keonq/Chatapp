# .env.example
# 环境变量配置示例文件
# 复制此文件为 .env 并填入实际值

# 应用环境
NODE_ENV=development

# 后端服务器配置
VITE_API_BASE_URL=http://localhost
VITE_API_MAIN_PORT=3001
VITE_API_AUTH_PORT=3002
VITE_API_CHAT_PORT=3003
VITE_API_FILE_PORT=3004
VITE_API_RTC_PORT=3005
VITE_API_NOTIFICATION_PORT=3006

# API版本
VITE_API_VERSION=v1

# 请求超时时间（毫秒）
VITE_REQUEST_TIMEOUT=10000

# WebSocket配置
VITE_WS_RECONNECT_INTERVAL=3000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# 生产环境配置（当NODE_ENV=production时使用）
VITE_PRODUCTION_DOMAIN=https://your-production-domain.com

# 调试模式
VITE_DEBUG_MODE=true

# 文件上传配置
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mp3,audio/wav,video/mp4

# 功能开关
VITE_ENABLE_VIDEO_CALL=true
VITE_ENABLE_VOICE_MESSAGE=true
VITE_ENABLE_FILE_SHARE=true